{% extends 'BaseMainBundle::layout.html.twig' %}

{% block body -%}
    {% include "BaseStaticBundle::messages.html.twig" %}

    <form class="form-normal" role="form" action="{{ path('page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        <h1>{{ 'form.edit_page'|trans({}, 'StaticBundle') }}</h1>

        {{ form_widget(edit_form._token) }}

        {{ form_label(edit_form.title) }}
        {{ form_errors(edit_form.title) }}
        {{ form_widget(edit_form.title) }}

        {{ form_label(edit_form.groupName) }}
        {{ form_errors(edit_form.groupName) }}
        {{ form_widget(edit_form.groupName) }}

        {{ form_label(edit_form.position) }}
        {{ form_errors(edit_form.position) }}
        {{ form_widget(edit_form.position) }}

        {{ form_label(edit_form.language) }}
        {{ form_errors(edit_form.language) }}
        {{ form_widget(edit_form.language) }}

        <div class="tinymce-div">
            {{ form_label(edit_form.text) }}
            {{ form_errors(edit_form.text) }}
            {{ form_widget(edit_form.text) }}
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'form.edit'|trans({}, 'StaticBundle') }}" >{{ 'form.edit'|trans({}, 'StaticBundle') }}</button>
    </form>

    <form class="form-normal" role="form" action="{{ path('page_delete', { 'id': entity.id }) }}" method="post" id="delete_form">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}

        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'form.delete'|trans({}, 'StaticBundle') }}" >{{ 'form.delete'|trans({}, 'StaticBundle') }}</button>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include "BaseMainBundle::jsTinymce.html.twig" %}
{% endblock %}