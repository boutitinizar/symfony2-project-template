<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ app.request.locale }}" lang="{{ app.request.locale }}">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <meta http-equiv="content-language" content="{{ app.request.locale }}"/>

    <title>{% block title %}{{ project }}{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico?v=140305') }}" />

    {% block stylesheets %}
        {% if app.environment == "prod" %}
            <link href="{{ asset('static/jquery-ui/themes/smoothness/jquery-ui.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/jquery-ui/themes/smoothness/theme.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/bootstrap/dist/css/bootstrap-theme.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/jasny-bootstrap/dist/css/jasny-bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/bootstrap-social/bootstrap-social.css') }}" rel="stylesheet"/>
        {% else %}
            <link href="{{ asset('static/jquery-ui/themes/smoothness/jquery-ui.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/jquery-ui/themes/smoothness/theme.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/bootstrap/dist/css/bootstrap-theme.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/jasny-bootstrap/dist/css/jasny-bootstrap.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/font-awesome/css/font-awesome.css') }}" rel="stylesheet"/>
            <link href="{{ asset('static/bootstrap-social/bootstrap-social.css') }}" rel="stylesheet"/>
        {% endif %}

            <link href="{{ asset('/css/styles.css?v=140410') }}" rel="stylesheet" />
            <link href="{{ asset('/css/grid-style.css?v=140410') }}" rel="stylesheet" />
    {% endblock %}
</head>

<body>
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('base_main_default_index') }}">{{ project }}</a>
                </div>
                <div class="navbar-collapse collapse">
                    {% include "BaseMainBundle::topMenu.html.twig" %}
                </div>
            </div>
        </div>

        <div class="container">
            {% block body %}
            {% endblock %}
        </div>

        <div id="push"></div>

    </div>

    <div id="footer">
        <div class="container container-footer">
            {% block footer %}
                <p class="text-muted">
                    <a href="{{ project_full_host }}">{{ project }}</a>
                </p>
            {% endblock %}
        </div>
    </div>

    {% block javascripts %}
        {% if app.environment == "prod" %}
            <script src="{{ asset('static/jquery/dist/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/jquery-ui/jquery-ui.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/typeahead.js/dist/typeahead.bundle.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/bootstrap/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/jasny-bootstrap/dist/js/jasny-bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/tinymce/tinymce.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/tinymce/tinymce.jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/hogan/web/builds/2.0.0/hogan-2.0.0.min.js') }}" type="text/javascript"></script>
        {% else %}
            <script src="{{ asset('static/jquery/dist/jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/jquery-ui/jquery-ui.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/typeahead.js/dist/typeahead.bundle.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/bootstrap/dist/js/bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/jasny-bootstrap/dist/js/jasny-bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/tinymce/tinymce.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/tinymce/tinymce.jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('static/hogan/web/builds/2.0.0/hogan-2.0.0.js') }}" type="text/javascript"></script>
        {% endif %}

            <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}" type="text/javascript"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}" type="text/javascript"></script>
    {% endblock %}

</body>

</html>
